<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="520dp"
        android:layout_height="950dp"
        android:layout_marginLeft="-00dp"
        android:layout_marginTop="-25dp"
        android:contentDescription="bg3"
        app:srcCompat="@drawable/bg3" />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="437dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="352dp"
        android:fontFamily="monospace"
        android:text="IdeaValut"
        android:textSize="34sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="251dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="302dp"
        android:fontFamily="monospace"
        android:text="Save Your Notes Easily"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="518dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="165dp" />


</RelativeLayout>